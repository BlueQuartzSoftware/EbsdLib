          "VCPKG_HOST_TRIPLET": {
            "type": "STRING",
            "value": "arm64-osx-dynamic"
          },
          "CMAKE_BUILD_TYPE": {
            "type": "STRING",
            "value": "Debug"
          }
        },
        "environment": {
            "VCPKG_INSTALLATION_ROOT": "/opt/local/vcpkg"
        }
      },
      {
        "name": "ci-linux-x64",
        "displayName": "ci-linux-x64",
